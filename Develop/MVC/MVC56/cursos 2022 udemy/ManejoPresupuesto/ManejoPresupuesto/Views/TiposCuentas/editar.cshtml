@model TipoCuenta


@{
    ViewData["Title"] = "Editar tipos cuentas";
}

<h1>Editar tipo de cuenta</h1>

<!--aqui se copia el html de crear, y luego se le agregan cosas
    tambien se podrian hacer vistas parciales
-->


<div asp-validation-summary="ModelOnly" class="text-danger">
</div>

<form asp-action="Editar" >

    <div class="mb-3">
        <!--la linea que se agrega el id pero escondido, para otras acciones-->
      <input type="hidden" asp-for="id"/>

       <label asp-for="nombre" class="col-form-label">Nombre</label>
           
       <input type="text" asp-for="nombre" class="form-control"/>
       <span asp-validation-for="nombre" class="text-danger"> </span>
       
    </div>

     <button type="submit" class="btn btn-primary">Enviar</button>
     <a class="btn btn-secondary" asp-action="Index">Cancelar</a>

</form>



@section Scripts{
    <partial name="_ValidationScriptsPartial"/>
}
